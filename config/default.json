{
  "node": {
    "protocol": "http",
    "port": 3000
  },
  "redis": {
    "url": "redis://127.0.0.1:6379",
    "secret": "defaultsecret",
    "useSSL": "false",
    "timeout": 1200
  },
  "frontend": {
    "inactivityAlert": 1080
  },
  "api": {
    "url":  "http://localhost:8080",
    "uploadEvidenceUrl": "http://localhost:8080/evidence/upload"
  },
  "appInsights": {
    "instrumentationKey": "",
    "roleName": "sya"
  },
  "ssl": {
    "hpkp": {
      "maxAge": "3600",
      "sha256s": "AbCdEf123=",
      "sha256sBackup": "ZyXwVu456="
    }
  },
  "e2e": {
    "waitForTimeout": "30000",
    "waitForAction": "2000",
    "outputDir": "./functional-output",
    "frontendUrl": "http://localhost:3000"
  },
  "features": {
    "evidenceUpload": {
      "enabled": true,
      "maxFileSize": 5
    },
    "allowESA": {
      "enabled": "true"
    },
    "allowAppointee": {
      "enabled": "true"
    }
  },
  "postcodeChecker": {
    "endpoint": "/regionalcentre",
    "enabled": true,
    "allowedRpcs": "birmingham,liverpool,sutton,leeds,newcastle,cardiff"
  },
  "saucelabs": {
    "browser": "chrome",
    "username": "username",
    "key": "privatekey",
    "tunnelId": "reformtunnel",
    "smartWait": "10000",
    "outputDir": "./functional-output/crossbrowser/reports"
  }
}
