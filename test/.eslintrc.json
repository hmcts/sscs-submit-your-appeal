{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "@hmcts/eslint-config/test",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "rules": {
	"linebreak-style": ["warn", "unix"],
    "object-curly-newline": ["error", {
      "consistent": true
    }],
    "no-invalid-this":"off",
    "new-cap": "off",
    "max-len": ["error", {
        "code": 200
      }
    ],
    "line-comment-position": "off",
    "no-warning-comments": "off"
  },
  "globals": {
    "After": true,
    "Before": true,
    "Feature": true,
    "Scenario": true,
    "xScenario": true
  }
}
