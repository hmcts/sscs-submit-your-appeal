{
  "extends": [
    "local>hmcts/.github:renovate-config",
    "github>hmcts/sscs-common//.github/sscs-renovate.json"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["chai"],
      "allowedVersions": "4.x"
    },
    {
      "matchPackageNames": ["chai-as-promised"],
      "allowedVersions": "7.x"
    },
    {
      "matchPackageNames": ["sinon-chai"],
      "allowedVersions": "3.x"
    },
    {
      "matchPackageNames": ["body-parser"],
      "allowedVersions": "1.x"
    },
    {
      "matchPackageNames": ["express"],
      "allowedVersions": "4.x"
    },
    {
      "matchPackageNames": ["path-to-regexp"],
      "allowedVersions": "0.1.x"
    },
    {
      "matchPackageNames": ["chalk"],
      "allowedVersions": "4.x"
    },
    {
      "matchPackageNames": ["@hmcts/one-per-page"],
      "allowedVersions": "5.x"
    }
  ]
}
