{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% macro govRadio(fieldName, headerText = "", isPageHeading = false, hint = null, classes = "govuk-fieldset__legend--m", items) %}

  {{ govukRadios({
    name: fieldName,
    fieldset: {
      legend: {
        text: headerText,
        isPageHeading: isPageHeading,
        classes: classes
      }
    },
    hint: {
      text: hint
    } if hint else undefined,
    items: items
  }) }}
{% endmacro %}
